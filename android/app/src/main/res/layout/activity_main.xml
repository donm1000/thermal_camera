<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ThermalCameraActivity"
    android:weightSum="100"
    android:background="#FF000000">

    <ImageView
        android:id="@+id/viewThermalImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:scaleType="fitCenter"
        android:background="#000000"
        android:padding="15dp"
        android:layout_gravity="top"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:weightSum="100"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        >

        <TextView
            android:id="@+id/txtMinTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="33"
            android:text="000"
            android:textAlignment="center"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/txtCenterTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="33"
            android:text="000"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/txtMaxTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="33"
            android:text="000"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="34sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:weightSum="100"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        >

        <NumberPicker
            android:id="@+id/npkrLow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:theme="@style/Base.V7.Theme.AppCompat"

            />

        <ImageView
            android:id="@+id/imgScale"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="80"/>

        <NumberPicker
            android:id="@+id/npkrHigh"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:theme="@style/Theme.AppCompat"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="25"
        android:weightSum="100"
        android:orientation="horizontal"

        >

        <Button
            android:id="@+id/start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="Start"
            android:layout_gravity="center_vertical"
            />

        <Button
            android:id="@+id/stop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:layout_gravity="center_vertical"
            android:text="Stop"
            />




    </LinearLayout>








</LinearLayout>